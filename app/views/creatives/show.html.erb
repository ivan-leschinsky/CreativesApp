<div class="row">
<fieldset>
<legend align="center"><h2><%= @creative.name %></h2></legend>
<h5>Теги:
  <span class="label radius">Программирование</span>
  <span class="secondary label radius">Спорт</span>
  <span class="success label radius">Еще что-то</span>
  <span class="alert label round">И еще...</span>
</h5>
<h3>
  <strong>Краткое описание:</strong>
  <%= @creative.description %>
</h3>

<a class="th radius" href="#">
  <span class="alert label">Тут картинка будет</span>
</a>

  <% @creative.sections.each do |section| %>
      <fieldset>
        <legend align="center"><h3><%= section.name %> (порядок: <%= section.number %>)</h3></legend>
        <%= section.body %>
        <ul class="button-group radius">
          <li><%= link_to 'Show', creative_section_path(@creative, section), :class => "tiny button success" %></li>
          <li><%= link_to 'Edit', edit_creative_section_path(@creative, section), :class => "tiny button" %></li>
          <li><%= link_to 'Destroy', creative_section_path(@creative, section), method: :delete, data: { confirm: t('are_you_sure') }, :class => "tiny button alert" %></li>
        </ul>
      </fieldset>
        
     		
      

    <% end %>
  
<br>



<%= link_to t('add_section'), new_creative_section_path(@creative), :class => "small button primary"  %>  
</fieldset>
<%= link_to 'Редактировать креатив', edit_creative_path(@creative), :class => "small button alert"  %>

<%= link_to 'Вернуться', creatives_path, :class => "small button secondary" %>
</div>
