<div class="row chapter">
  <h1><%= link_to t('back'), creative_path(@chapter.creative), :class => "button secondary round" %> Новая глава</h1>
  <fieldset>
    <%= form_for @chapter, url: creative_chapters_path do |f| %>
      <% if @chapter.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@chapter.errors.count, "error") %> prohibited this chapter from being saved:</h2>

          <ul>
          <% @chapter.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.text_field :name, :placeholder => "Имя главы" %>
      </div>
      
       <div  class="row">
        <div class="medium-6 columns">
          <div class='wmd-panel'>
            <div id='wmd-button-bar'></div>
            <%= text_area_tag :body, @chapter.body, :name => "chapter[body]", :class => "wmd-input", :id => "wmd-input" %>
          </div>
        </div>
        <div class="medium-6 columns">
        <div class="small button radius addbtn" value="#Заголовок#" data-reveal-id="choosePicModal">Вставить изображения</div>
          <p>Предпросмотр:</p>
          <div id="wmd-preview" class="wmd-panel wmd-preview"></div>
        </div>
      </div>
      
      <div class="field">
        <%= f.hidden_field :creative_id %>
        <%= f.hidden_field :number %>
      </div>
      <div class="actions">
        <button type="submit" class="tiny button success radius">Сохранить </button>
      </div>
    <% end %>
  </fieldset>
  <%= link_to t('back'), creative_path(@chapter.creative), :class => "tiny button secondary" %>
</div>

<%= render "modal_pictures" %>
