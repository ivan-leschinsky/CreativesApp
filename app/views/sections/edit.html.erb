<div class="row chapter">
  <h1>Редактирование главы</h1>
  <fieldset>
  <%= form_for @section, url: creative_section_path(@section.creative, @section) do |f| %>
    <% if @section.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:</h2>

        <ul>
        <% @section.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  		<div class="field">
        <%= f.text_field :name, :placeholder => "Имя главы" %>
      </div>
      
      <div class="row">
        <div class="medium-6 columns">
          <div class='wmd-panel'>
            <div id='wmd-button-bar'></div>
            <%= text_area_tag :body, @section.body, :name => "section[body]", :class => "wmd-input", :id => "wmd-input" %>
          </div>
        </div>
        <div class="medium-6 columns">
        <div class="small button addbtn" value="#Заголовок#" data-reveal-id="myModal">Вставить изображения</div>
          <p>Предпросмотр:</p>
          <div id="wmd-preview" class="wmd-panel wmd-preview"></div>      
        </div>
      </div>
      
      <div class="field">
        <%= f.hidden_field :creative_id %>
        <%= f.hidden_field :number %>
      </div>
      <div class="actions">
    	  <button type="submit" class="tiny button success radius">Сохранить </button>
      </div>
    <% end %>

  </fieldset>
  <%= link_to t('back'), creative_path(@section.creative), :class => "tiny button secondary" %>
</div>

<div id="myModal" class="reveal-modal" data-reveal>
  <h2><%= t('choose_pics')%></h2>
  <ul class="small-block-grid-3 medium-block-grid-6 large-block-grid-8">
    <% if @section.creative.pictures.empty? %>
        <%= content_tag :h3, t('.no_pictures') %>
      <% else %>
        <% @section.creative.pictures.each do |pic| %>
          <li><a class="th" data-skip-pjax href="<%= pic.file.url%>"><img data-caption="<%= pic.file.to_s %>" src="<%= pic.file.thumb.url %>"></a></li>
        <% end %>
      <% end %>
  </ul>
  <a class="close-reveal-modal">&#215;</a>
</div>