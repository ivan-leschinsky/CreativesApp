  <fieldset>
    <legend align="center">
      <h2>
        <%= @creative.name %>
      </h2>
    </legend>
    <h5>Автор:
      <span class="alert label radius"><%= link_to @creative.user.user_name, @creative.user %></span>
      Теги:
      <span class="label radius">Программирование</span>
      <span class="success label radius">Еще что-то</span>
      <span class="label radius">И еще...</span>
    </h5>

    <p>
      <%= @creative.description %>
    </p>
    <h3><%= t('.chapters') %></h3>
    <% @sections.each do |section| %>
        <div class="panel">
          <h5><%= link_to section.name, :anchor => "chapter_#{section.number+1}" %></h5>
        </div>
      </li>
    <% end %>

    <% @sections.each do |section| %>
        <fieldset>
          <legend align="center"><h3 id="chapter_<%= section.number+1 %>"><%= section.name %></h3></legend>
          <p><%= markdown(section.body) %></p>
        </fieldset>
       
    <% end %>
  </fieldset>
  <%= link_to 'Вернуться', creative_path(@creative), :class => "small button secondary" %>
