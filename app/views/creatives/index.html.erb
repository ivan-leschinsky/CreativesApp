<div class="row">
  <div class="medium-12 columns">
  <% if current_user %>
  <%= link_to 'Новый креатив', new_creative_path, class: "button radius right" %>
  <% end %>
  <h1 align="center">Все креативы</h1>
  </div>

  <% @creatives.each do |creative| %>
    <div class="medium-6 columns">
      <div class="panel">      
        <h3>
          "<%= link_to creative.name, creative %>"
        </h3>
        <%= creative.description %><br/>
              <p><%= creative.sections.size %> глав</p>
        <ul class="button-group radius">
          <li><%= link_to t('show'), creative, class: "small button success"%></li>
                <% if current_user.try(:id) == creative.user_id %>
          <li><%= link_to t('edit'), edit_creative_path(creative), class: "small button" %></li>
          
          <li><%= link_to t('destroy'), creative, :method => :delete, data: { confirm: t('.are_you_sure')}, :class => "small button alert" %></li>
        <% end %>
        </ul>
      </div>        
    </div>
  <% end %>
</div>