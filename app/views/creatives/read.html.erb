<div id="home"></div>
  <div data-magellan-expedition="fixed" align="center">
    <dl class="sub-nav">
    <div class="row">
      <div class="large-9 large-centered medium-12 medium-centered column">
        <dd><%= link_to 'Вернуться к креативу', creative_path(@creative), :class => "left" %></dd>
        <dd>|</dd>
        <dd data-magellan-arrival="home"><a href="#home">Наверх</a></dd>
        <dd>|</dd>
        <% @sections.each do |section| %>
          <dd data-magellan-arrival="chapter_<%= section.number+1 %>"><%= link_to section.name, :anchor => "chapter_#{section.number+1}" %></dd>
        <% end %>
      </div>
      </div>
    </dl>
</div>
  <fieldset>
    <legend align="center">
      <h2>
        <%= @creative.name %>
      </h2>
    </legend>
    <p>
      <%= t('.short_desc')%><%= @creative.description %>
    </p>
    <% @sections.each do |section| %>
      <fieldset>
      <legend align="center" data-magellan-destination="chapter_<%= section.number+1 %>"><h3 id="chapter_<%= section.number+1 %>"><%= section.name %></h3></legend>
        <p class="markdown-source"><%= section.body %></p>
      </fieldset>
    <% end %>
  </fieldset>
