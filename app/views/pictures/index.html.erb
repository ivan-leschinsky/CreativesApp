<%= form_for @picture, :url => creative_pictures_path, :html => { :multipart => true, :id => "fileupload"  } do |f| %>
  <div class="medium-8 columns">
    <span class="button fileinput-button success">
      <span>Добавить файлы ...</span>
      <%= f.file_field :file, multiple: true, id: 'upload-field' %>
    </span>
    <%= link_to "Back", creative_path(@creative), :class => "button secondary" %>
  </div>    
  <div class="medium-12 columns">
  	<table role="presentation" class="table table-striped"><tbody class="files"></tbody></table>
  </div>
<% end %>

<%= render 'template_upload' %>
<%= render 'template_download' %>
